<h2>All Employees</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Designation</th>
      <th>Location</th>
      <th>Salary</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% employees.forEach(emp => { %>
      <tr>
        <td><%= emp.EmployeeName %></td>
        <td><%= emp.EmployeeDesignation %></td>
        <td><%= emp.EmployeeLocation %></td>
        <td><%= emp.Salary %></td>
        <td>
          <a href="/edit/<%= emp._id %>" class="btn btn-warning btn-sm">Edit</a>

          
          <form action="/employees/<%= emp._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
